---
layout: base.njk
---
<div id="progress-bar"></div>
<article class="main-article">
  <div class="container container--narrow flow">
    
      <h1 class="article-title">{{ title }}</h1>
      <h5>Written by {{author}}</h5>
      <time>{{ date | postDate }} - {{ content | emojiReadTime }}</time>

      <div class="content">
        {{ content | safe }}
        <div>Share | 
        <a href="https://www.facebook.com/sharer.php?u={{ rootURL }}{{ page.url }}">FB</a> ~
        <a href="https://twitter.com/intent/tweet?url={{ rootURL }}{{ page.url}}&text={{title}}">Twitter</a> ~
        <a href="https://www.linkedin.com/sharing/share-offsite/?url={{ rootURL }}{{ page.url }}">LinkedIn</a>
        <a href="https://www.linkedin.com/sharing/share-offsite/?url={{rootURL}}{{page.url}}">LinkedIn</a>
        </div>
      </div>

  </div>
</article>
